# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Resend Email Service
RESEND_API_KEY=your_resend_api_key

# Admin Write Secret (for protecting write operations)
ADMIN_WRITE_SECRET=your_admin_write_secret_here

# Public Admin Secret (for prototype only - exposes secret to client)
# Note: In production, use proper authentication instead of exposing secrets
NEXT_PUBLIC_ADMIN_WRITE_SECRET=your_admin_write_secret_here

# Optional: For development
NODE_ENV=development
